<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/material_blue_grey_800"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView  android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:background="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false"
        android:id="@+id/tv_display"
        android:backgroundTint="#ffffff"
        android:autoText="true"
        android:textColor="#000000" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ib_right"
        android:background="@drawable/right_arrow"
        android:layout_alignTop="@+id/b_ok"
        android:layout_toRightOf="@+id/b_ok"
        android:layout_toEndOf="@+id/b_ok" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ib_down"
        android:background="@drawable/down_arrow"
        android:layout_below="@+id/ib_right"
        android:layout_alignRight="@+id/imageButton11"
        android:layout_alignEnd="@+id/imageButton11" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ib_left"
        android:background="@drawable/left_arrow"
        android:adjustViewBounds="true"
        android:layout_above="@+id/ib_down"
        android:layout_toLeftOf="@+id/ib_down"
        android:layout_toStartOf="@+id/ib_down" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ib_up"
        android:background="@drawable/up_arrow"
        android:layout_below="@+id/tv_display"
        android:layout_toRightOf="@+id/ib_left"
        android:layout_toEndOf="@+id/ib_left"
        android:layout_marginTop="44dp"
        android:contentDescription="imageButton_upButton" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="OK"
        android:id="@+id/b_ok"
        android:layout_below="@+id/ib_up"
        android:layout_toRightOf="@+id/ib_left"
        android:layout_toEndOf="@+id/ib_left" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ib_vocalcommand"
        android:background="@drawable/smiling_face"
        android:layout_alignTop="@+id/ib_up"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ib_help"
        android:background="@drawable/question_mark"
        android:layout_alignTop="@+id/ib_up"
        android:layout_alignRight="@+id/tv_display"
        android:layout_alignEnd="@+id/tv_display" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ib_back"
        android:background="@drawable/back_button"
        android:layout_below="@+id/ib_left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ib_delete"
        android:background="@drawable/delete_button"
        android:layout_alignLeft="@+id/ib_help"
        android:layout_alignStart="@+id/ib_help"
        android:layout_below="@+id/ib_right" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton10"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/ib_delete"
        android:layout_alignEnd="@+id/ib_delete" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton11"
        android:layout_alignTop="@+id/imageButton9"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="1"
        android:id="@+id/b_digit_1"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ib_down"
        android:layout_toStartOf="@+id/ib_down" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="2"
        android:id="@+id/b_digit_2"
        android:layout_alignTop="@+id/b_digit_1"
        android:layout_alignLeft="@+id/ib_down"
        android:layout_alignStart="@+id/ib_down" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="3"
        android:id="@+id/b_digit_3"
        android:layout_alignTop="@+id/b_digit_2"
        android:layout_alignLeft="@+id/ib_right"
        android:layout_alignStart="@+id/ib_right" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="4"
        android:id="@+id/b_digit_4"
        android:layout_below="@+id/b_digit_1"
        android:layout_alignLeft="@+id/b_digit_1"
        android:layout_alignStart="@+id/b_digit_1" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="5"
        android:id="@+id/b_digit_5"
        android:layout_alignTop="@+id/b_digit_4"
        android:layout_toLeftOf="@+id/b_digit_3"
        android:layout_toStartOf="@+id/b_digit_3" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="6"
        android:id="@+id/b_digit_6"
        android:layout_alignTop="@+id/b_digit_5"
        android:layout_toRightOf="@+id/b_digit_5"
        android:layout_toEndOf="@+id/b_digit_5" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="7"
        android:id="@+id/b_digit_7"
        android:layout_below="@+id/b_digit_4"
        android:layout_alignLeft="@+id/b_digit_4"
        android:layout_alignStart="@+id/b_digit_4" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="8"
        android:id="@+id/b_digit_8"
        android:layout_below="@+id/b_digit_5"
        android:layout_toLeftOf="@+id/b_digit_6"
        android:layout_toStartOf="@+id/b_digit_6" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="9"
        android:id="@+id/b_digit_9"
        android:layout_below="@+id/b_digit_6"
        android:layout_alignLeft="@+id/b_digit_6"
        android:layout_alignStart="@+id/b_digit_6" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text=",*"
        android:id="@+id/b_digit_star"
        android:layout_below="@+id/b_digit_7"
        android:layout_alignLeft="@+id/b_digit_7"
        android:layout_alignStart="@+id/b_digit_7" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="0"
        android:id="@+id/b_digit_0"
        android:layout_alignTop="@+id/b_digit_star"
        android:layout_toRightOf="@+id/b_digit_star"
        android:layout_toEndOf="@+id/b_digit_star" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="#+"
        android:id="@+id/b_digit_plus"
        android:layout_below="@+id/b_digit_9"
        android:layout_alignLeft="@+id/b_digit_9"
        android:layout_alignStart="@+id/b_digit_9" />

</RelativeLayout>
